*
	box-sizing: border-box

html,
body,
.m-container,
.m-workbench,
.m-filter-repo
	height: 100%

body
	font-family: sans-serif
	font-size: 10px
	-webkit-user-select: none
	-moz-user-select: none
	user-select: none

.m-workbench
	margin-right: 250px
	background: linear-gradient(transparent 80%, hsl(0, 0%, 96%) 20%),
	            linear-gradient(90deg, transparent 80%, hsl(0, 0%, 96%) 20%)
	background-size: 5px 5px

	> .m-filter-on-canvas
		position: absolute
		left: 0
		top: 0

		border: 1px solid #000
		background: #fff
		display: inline-block
		padding: 12px
		// min-width: 15em
		// border-radius: 3px

		cursor: move

		> h4,
		> p
			margin: 0

		> .input,
		> .output
			position: absolute
			margin: auto
			width: 3px
			height: 6px
			background: black

		> .input
			border-radius: 0 3px 3px 0
			left: -1px

		> .output
			border-radius: 3px 0 0 3px
			right: -1px

	> .m-filter-on-canvas.active
		background: red


.m-repository
	position: absolute
	top: 0
	right: 0
	width: 250px
	border-left: 1px solid #ccc
	height: 100%

	> .m-item-container
		height: 50%
		overflow: auto
		padding: 20px
		background: #f6f6f6

		> .filter-repository > .m-filter
			display: inline-block
			border: 1px solid #000
			padding: 8px
			margin-bottom: 10px
			margin-right: 6px
			background: #fff

		> .pipe-repository > .m-pipe
			display: inline-block
			border: 1px solid #000
			padding: 8px
			margin-bottom: 10px
			margin-right: 6px
			background: #fcfadc