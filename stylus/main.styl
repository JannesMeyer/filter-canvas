@font-face
	font-family: 'custom-font'
	src: url('/fonts/custom-font.eot?17392834')
	src: url('/fonts/custom-font.eot?17392834#iefix') format('embedded-opentype'), url('/fonts/custom-font.woff?17392834') format('woff'), url('/fonts/custom-font.ttf?17392834') format('truetype'), url('/fonts/custom-font.svg?17392834#custom-font') format('svg')
	font-weight: normal
	font-style: normal

.icon:before
	font-family: 'custom-font'
	font-style: normal
	font-weight: normal
	speak: none

	display: inline-block
	text-decoration: inherit
	width: 1em
	text-align: center
	margin-right: 0.2em

	/* For safety - reset parent styles, that can break glyph codes*/
	font-variant: normal
	text-transform: none

.icon-doc:before { content: '\e800' }
.icon-doc-inv:before { content: '\e806' }
.icon-trash:before { content: '\e801' }
.icon-open:before { content: '\e805' }
.icon-save:before { content: '\e804' }
.icon-undo:before { content: '\e802' }
.icon-redo:before { content: '\e803' }

.hidden
	display: none

*
	box-sizing: border-box

body
	font-family: sans-serif
	font-size: 11px
	user-select: none
	background: url(/images/tiny_grid_light.png)

html, body, .m-app, .m-container
	height: 100%

.m-container
	margin-right: 250px
	display: flex
	flex-direction: column

.m-actions
	padding: 5px 7px
	background: #ededed
	border-top: 1px solid #aaa

	button
		padding: 6px
		font-size: 13px
		margin-right: 5px

.m-workbench
	position: relative // for the connection drag wire and the selection rectangle
	overflow: auto
	flex-grow: 1

.m-workbench-items
	min-height: 100%
	min-width: 200%
	position: relative

	> .filter,
	> .pipe
		position: absolute
		// left, top, width, height
		border: 1px solid #000
		cursor: move
		z-index: 10

		&.selected
			color: #114dcc
			background: #f5f8ff
			border-color: @color
			> .inputs > .connector,
			> .outputs > .connector
				background: @color

		> h4
			line-height: 20px // an even number
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
			text-align: center
			position: relative
			top: 50%
			margin: 0 4px
			margin-top: -0.5 * @line-height

		> .inputs,
		> .outputs
			position: absolute
			top: 50%
			transform: translateY(-50%)
			> .connector
				position: relative
				width: 12px
				height: 8px
				margin-top: 4px
				margin-bottom: 4px
				background: #0886D6
				cursor: pointer
			> .connector.glow
				cursor: default
				box-shadow: 0 0 10px 4px #ff9c00
			> .connector.mouseover
				box-shadow: 0 0 10px 4px #f00

		> .inputs
			left: 0
			> .connector
				left: -7px
				border-radius: 0 4px 4px 0

		> .outputs
			right: 0
			> .connector
				right: -7px
				border-radius: 4px 0 0 4px

	> .filter
		background: #fff

	> .pipe
		background: #fff

.m-wire
	position: absolute
	z-index: 0

.m-wire.dragging
	z-index: 9999
	pointer-events: none

.m-selection
	position: absolute
	z-index: 9999
	// left, top, width, height
	background: rgba(51, 181, 229, 0.2)
	border: 1px solid rgba(0, 102, 255, 0.5)
	transition: opacity 0.15s
	pointer-events: none

.m-sidebar
	position: absolute
	top: 0
	right: 0
	width: 250px
	height: 100%
	border-left: 1px solid #ccc
	height: 100%
	z-index: 10000
	background: #fff

.m-repository-pane
	height: 60%
	overflow: auto
	padding: 20px
	padding-bottom: 10px
	background: #f6f6f6
	border-bottom: 1px solid #ccc

	h3
		margin-bottom: 6px
		margin-top: 18px

	> div:first-child > h3
		margin-top: 0

	> .filter-repository > .item,
	> .pipe-repository > .item
		display: inline-block
		border: 1px solid #000
		padding: 8px
		margin-bottom: 10px
		margin-right: 6px
		cursor: move

	> .filter-repository > .item
		background: #fff

	> .pipe-repository > .item
		background: #fcfadc

.m-detail-pane
	padding: 20px
	height: 40%
	overflow: auto

	> h3
		font-size: 1.1em
		margin-top: 0
		margin-bottom: 12px

	#defaultDialog
		> label
			display: block
			clear: right
		> label > span
			display: inline-block
			padding-top: 2px
		> label > input
			display: inline-block
			float: right

	#newParameterDialog
		> input
			width: 100%
		> label
			display: block
			margin-top: 5px
			margin-bottom: 5px
		> label > input
			margin-right: 5px

	.actions
		margin-top: 12px

		button
			display: block
			width: 100%
			background: #e7e7e7
			border: 0
			margin-top: 5px
			margin-bottom: 5px
			padding: 5px

		button.red-button
			background: #f22
			color: #fff
			font-weight: bold


// Third-party spinner styles
// Source: http://tobiasahlin.com/spinkit/

.spinner
	width: 50px
	height: 20px

	> div
		background-color: #bbb
		height: 100%
		width: 6px
		margin-right: 1px
		display: inline-block
		animation: stretchdelay 1.2s infinite ease-in-out

	.rect2
		animation-delay: -1.1s

	.rect3
		animation-delay: -1.0s

	.rect4
		animation-delay: -0.9s

	.rect5
		animation-delay: -0.8s

@keyframes stretchdelay
	0%, 40%, 100%
		transform: scaleY(0.4)
	20%
		transform: scaleY(1.0)